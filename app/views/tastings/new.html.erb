<div class="container">
  <div class="row">
    <div class="col-md-8 offset-md-2 tasting-edit-frame">
      <h1 class="text-center">テイスティング登録</h1>
      <%= form_with model: @tasting, url: whiskey_tastings_path(@whiskey), local: true do |f| %>
        <div class="form-group row tasting-type">
          <%= f.label :tasting_type, "ウイスキーの飲み方", class: "col-md-3 col-form-label" %>
          <div class="col-md-9">
            <%= f.text_field :tasting_type, class: "form-control" %>
          </div>
        </div>

        <div class="form-group row tasting-flavor">
          <%= f.label :flavor, "ウイスキーの味", class: "col-md-3 col-form-label" %>
          <div class="col-md-9">
            <%= f.text_field :flavor, class: "form-control" %>
          </div>
        </div>

        <div class="form-group row tasting-aroma">
          <%= f.label :aroma, "ウイスキーの香り", class: "col-md-3 col-form-label" %>
          <div class="col-md-9">
            <%= f.text_field :aroma, class: "form-control" %>
          </div>
        </div>

        <div class="form-group row tag">
          <%= f.label :tag_names, "タグ", class: "col-md-3 col-form-label" %>
          <div class="col-md-9">
            <%= f.text_field :tag_names, class: "form-control", placeholder: "','で区切ってください" %>
          </div>
        </div>

        <div class="form-group row tasting-explanation">
          <%= f.label :tasting_text, "その他", class: "col-md-3 col-form-label" %>
          <div class="col-md-9">
            <%= f.text_area :tasting_text, class: "form-control" %>
          </div>
        </div>

        <div class="actions text-right">
          <%= f.submit "登録", class: "btn btn-primary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
