<div class="tasting-edit-container">
  <div class="tasting-edit-frame">

    <div class="tasting-edit">
      <h1>テイスティング編集</h1>
    </div>
    <%= form_with model: [@whiskey, @tasting], id: 'edit_whiskey_tasting', local: true do |f| %>
      <div class="tasting-edit-type">
        <%= f.label :tasting_type, "ウイスキー飲み方" %>
        <%= f.text_field :tasting_type %>
      </div>

      <div class="tasting-edit-aroma">
        <%= f.label :aroma, "ウイスキーの味" %>
        <%= f.text_field :aroma %>
      </div>

      <div class="tasting-edit-flavor">
        <%= f.label :flavor, "ウイスキーの香り" %>
        <%= f.text_field :flavor %>
      </div>

      <div class="tasting-edit-text">
        <%= f.label :tasting_text, "その他" %>
        <%= f.text_area :tasting_text %>
      </div>

      <div class="tasting-edit-tag">
        <%= f.label :tag_names, "タグ" %>
        <%= f.text_field :tag_names, value: @tag_names.join(','),\
          placeholder: "','で区切ってください" %>
      </div>

      <div class="actions">
        <%= f.submit "更新" %>
      </div>
    <% end %>
  </div>
</div>
