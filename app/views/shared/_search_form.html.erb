<%= form_with model: @search_form, url: whiskeys_path, method: :get, local: true do |f| %>
  <div class="row g-3 align-items-center">
    <div class="col-md-3">
      <div class="form-group">
        <%= f.label :category_names, t('.category_names'), class: 'form-label' %>
        <%= f.select :category_names, options_for_select(@category_names.map(&:category_name)), include_blank: true, class: 'form-select' %>
      </div>
    </div>
    
    <div class="col-md-3">
      <div class="form-group">
        <%= f.label :category_types, t('.category_types'), class: 'form-label' %>
        <%= f.select :category_types, options_for_select(@category_types.map(&:category_type)), include_blank: true, class: 'form-select' %>
      </div>
    </div>
    
    <div class="col-md-3">
      <div class="form-group">
        <%= f.label :name, t('.name'), class: 'form-label' %>
        <%= f.text_field :name, class: 'form-control' %>
      </div>
    </div>
    
    <div class="col-md-3">
      <div class="form-group">
        <%= f.label :text, t('.text'), class: 'form-label' %>
        <%= f.text_field :text, class: 'form-control' %>
      </div>
    </div>

    <div class="col-md-3">
      <div class="form-group">
        <%= f.submit t('helpers.submit.search'), class: 'btn btn-primary mt-4' %>
      </div>
    </div>
  </div>
<% end %>
